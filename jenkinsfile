pipeline {
    agent any
    tools {nodejs "NODEJS"}
    environment {
        NPM_CONFIG_LOGLEVEL = 'warn'
    }
    stages {
        stage('Install Dependencies') {
            steps {
                bat 'npm install'
            }
        }
        stage('Build') {
            steps {
                bat 'npm run build'
            }
        }
        stage('Test') {
            steps {
                bat 'npm test'
            }
        }
        stage('Deploy') {
            steps {
                bat 'jenkins\\scripts\\deliver.bat'
            }
        }
    }
    post {
        success {
            echo 'Le déploiement a réussi!'
        }
        failure {
            echo 'Le déploiement a échoué.'
        }
        always {
            bat 'jenkins\\scripts\\kill.bat'
        }
    }
}
