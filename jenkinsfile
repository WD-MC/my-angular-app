pipeline {
    agent any
    tools {nodejs "NODEJS"}
    stages {
        stage('Install Dependencies') {
            steps {
                bat 'npm install'
            }
        }
        stage('Test') {
            steps {
                bat 'npm test'
            }
        }
        stage('Deploy') {
            steps {
                bat 'jenkins\\scripts\\deliver.bat'
                input message: 'Finibated using the web site? (Click "Proceed" to continue)'
                bat 'jenkins\\scripts\\kill.bat'
            }
        }
    }
}
